{
  "name": "form-controller",
  "version": "1.0.0",
  "description": "",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "yarn clean && yarn build:tsc",
    "build:tsc": "tsc --project tsconfig.build.json",
    "build:watch": "yarn build:tsc --watch",
    "clean": "rimraf tsconfig*.tsbuildinfo lib",
    "test": "jest --no-cache --silent --collect-coverage",
    "test:examples": "jest --no-cache --collect-coverage src/examples",
    "tsc": "tsc --noEmit"
  },
  "author": "Martin Tichovsky",
  "license": "MIT",
  "private": false,
  "sideEffects": false,
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@testing-library/dom": "8.1.0",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "26.0.24",
    "@types/react": "17.0.15",
    "@types/react-dom": "17.0.9",
    "jest": "27.0.6",
    "npm-watch": "0.11.0",
    "prettier": "2.3.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.4",
    "typescript": "4.3.5"
  },
  "peerDependencies": {
    "react": "^17.x.x",
    "react-dom": "^17.x.x"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "testMatch": [
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "preset": "ts-jest",
    "setupFiles": [
      "./jest-react-hooks.js"
    ],
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/src"
    ]
  },
  "watch": {
    "copy-files": {
      "patterns": [
        "src"
      ],
      "quiet": false,
      "runOnChangeOnly": true
    }
  }
}